<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid
                android:color="#f5c311" >
            </solid>

            <stroke
                android:color="#f5c311">
            </stroke>

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    >
            </padding>

            <corners
                android:radius="10dp"   >
            </corners>
        </shape>
    </item>

</layer-list>